{
  "swagger": "2.0",
  "info": {
    "title": "Game Review API",
    "description": "Collects and Displays Video Game Review Information",
    "version": "1.0.0"
  },
  "host": "localhost:8000", 
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/": {
      "get": {
        "description": "Returns the current authorization status",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/login": {
          "post": {
            "summary": "User login",
            "description": "Initiate the login process by sending credentials.",
            "consumes": ["application/json"],
            "parameters": [
              {
                "in": "body",
                "name": "credentials",
                "description": "User login credentials",
                "required": true,
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    }
                  }
                }
              }
            ],
            "responses": {
              "200": {
                "description": "Success"
              },
              "401": {
                "description": "Unauthorized"
              }
            }
          }
        },
    "/logout": {
      "get": {
        "description": "user logout",
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Failure"
          }
        }
      }
    },
    "/callback": {
      "get": {
        "description": "callback after authentication",
        "responses": {
          "200": {
            "description": "success"
          },
          "400": {
            "description": "failure"
          }
        }
      }
    },
    "/checkLoginStatus": {
      "get": {
        "description": "Checks if User is logged in or out and returns status",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api-docs": {
      "get": {
        "description": "Swagger API documentation",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/reviews/": {
      "get": {
        "description": "Returns all reviews in the db",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401":{
            "description": "User is not logged in"
          }
        }
      },
      "post": {
        "description": "Add additional Game Review",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "author": {
                  "example": "any"
                },
                "title": {
                  "example": "any"
                },
                "musicR": {
                  "example": "any"
                },
                "gameplayR": {
                  "example": "any"
                },
                "storyR": {
                  "example": "any"
                },
                "overallRating": {
                  "example": "any"
                },
                "comments": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "User is not logged in"
          },
          "418": {
            "description": "I'm a teapot"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/reviews/{id}": {
      "get": {
        "description": "One game review retrieved by ID",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "User is not logged in"
          }

        }
      },
      "put": {
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "author": {
                  "example": "any"
                },
                "title": {
                  "example": "any"
                },
                "musicR": {
                  "example": "any"
                },
                "gameplayR": {
                  "example": "any"
                },
                "storyR": {
                  "example": "any"
                },
                "overallRating": {
                  "example": "any"
                },
                "comments": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "401": {
            "description": "User is not logged in"
          },
          "418": {
            "description": "I'm a teapot"
          },
          "500": {
            "description": "Internal Server Error"
          }
          
        }
      },
      "delete": {
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "User is not logged in"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/games/": {
      "get": {
        "description": "All game Listings",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "User is not logged in"
          }
        }
      }
    },
    "/games/{id}": {
      "get": {
        "description": "Game retrieved by Id",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "User is not logged in"
          }
        }
      }
    }
  }
}